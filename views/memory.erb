<h1> Memory Usage </h1>

<section class = "box">
	<table>
		<p id = "line0">
			<tr>
				<% arMem[0].split(/\W+/).each do |e| %>
					<th> <%= e %> </th>
				<% end %>
			</tr>
		</p>
		<p id = "line1">
			<tr>
				<% arMem[1].split(/\W+/).each_with_index do |e,i| %>

					<td> <%= e %> </td>
				<% end %>
			</tr>
		</p>
	</table>
	<p> <%= arMem[2] %> </p>
	<p> <%= arMem[3] %> </p>
</section>

<form>
	<p> Save data: </p>
	<% arMem.each_with_index do |e,i| %>
		<input id="info<%= i %>" name="info<%= i %>" value="<%= e %>" type="hidden">
	<% end %>
	<input id="title" name="title" value="Memory" type="hidden">
	<input id="date" name="date" value="<%= DateTime.now %>" type="hidden">
	<input type="submit" value="Save">
</form>

<section>
	<a href = "/" class="back"> Go Back </a>
</section>

